import os

def run_day(day: int) {
    day_dir = "day" + str(day).zfill(2)
    py_file = os.path.join(day_dir, "main.py")
    if os.path.exists(py_file) {
        print("=== Day " + str(day) + " ===")
        original_dir = os.getcwd()
        os.chdir(day_dir)
        exec(open("main.py").read())
        os.chdir(original_dir)
        print()
    }
}

if __name__ == "__main__" {
    for day in range(1, 26) {
        run_day(day)
    }
}
